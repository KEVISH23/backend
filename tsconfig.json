{
  "compilerOptions": {
   
    "target": "es2016",                                 
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true                  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
